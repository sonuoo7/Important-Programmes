import java.util.*;
import java.lang.*;
import java.io.*;

public class Main
{
    public static void main(String[] args)
    {
      Scanner sc=new Scanner(System.in);
      int n=sc.nextInt();
      int ans=0;
      int maxi=0;
        int arr[] = new int[n];
      for (int i=0;i<n;i++){
        arr[i]=sc.nextInt();
        if(arr[i]>maxi){
          ans++;
          maxi=arr[i];
        }
      }
 
        System.out.println(ans);
    }
}
